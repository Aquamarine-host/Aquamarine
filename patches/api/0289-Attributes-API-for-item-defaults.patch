diff --git a/src/main/java/org/bukkit/Material.java b/src/main/java/org/bukkit/Material.java
index a117ad770e84784a3b74612faacb15071c8f2b4d..dd692b5f024e660eeb381d3a60fd87c076ae7124 100644
